{# a post layout #}
<main id="main" class="bg-image bg-effect--blk-transparency main flex flex-1 flex-col focus:outline-none" tabindex="-1">

    <article id="container-centre" class="content column centre flex-1">

        <div class="mb-12 md:mb-20">

            <header>
                <h1 class="page-title text-3xl md:text-center md:text-5xl lg:text-6xl">{{ title }}</h1>
                <time datetime="{{ date_of_event }}">
                    {{ date_of_event }}
                </time>
                <ul class="flex justify-between">
                    {% for act in lineup %}
                        <li class="inline"><h2 class="inline header__line-up">{{ act.title }}</h2></li>
                    {% endfor %}
                </ul>
            </header>

            <div class="text-sm md:text-base text-gray-600 flex justify-center">




