<main id="main" class="bg-image bg-effect--blk-transparency main flex flex-1 flex-col focus:outline-none" tabindex="-1">
    <section id="container-centre" class="column centre flex-1" aria-label="Blogs">

        <h1 class="page-title text-3xl md:text-center md:text-5xl mb-16 lg:mb-24 lg:text-6xl">{{ title }}</h1>


        <div class="flex-col">


            {% for event in collections.events %}
            <article class="ticket__bg">
                <a href="{{ event.url }}">
                    <div class="ticket__acts">
                        {% for act in event.data.lineup %}
                        <div>
                            <img class="ticket__act-image" src="{{ act.image }}">
                            <h2 class="ticket__act-title">{{ act.title }}</h2>
                            <p class="ticket__act-summary">{{ act.summary }}</p>
                        </div>
                        {% endfor %}
                    </div>
                </a>
                    <div class="ticket__booking-info">
                        <span class="ticket__time font-sans font-bold">{{ event.data.time_of_event }}</span>
                        <a class="ticket__cta btn-cta"  href="{{ event.data.ticketing }}">tickets</a>
                        <span class="ticket__date font-sans font-bold">{{ event.data.date_of_event }}</span>
                    </div>
            </article>

            {% endfor %}


