                    <label for="name uppercase">Name</label>
                    <input class="input text-black font-serif" id="name" type="text" name="name" autocomplete="name" required>
                </div>

                <div class="row required uppercase">
                    <label for="email uppercase text-white">Email</label>
                    <input class="input text-black font-serif" id="email" type="text" name="email" autocapitalize="off" autocomplete="email" required>
                </div>

                <div class="row uppercase">
                    <label for="phone uppercase text-white">Phone</label>
                    <input class="input text-black font-serif" id="phone" type="text" name="phone" autocomplete="tel" required>
                </div>

{#                #}{# this field label will show as (optional) as the required class has been left off #}
                <div class="row">
                    <label for="message uppercase text-white">Message</label>
                    <textarea class="textarea text-black font-serif" id="message" name="message"></textarea>
                </div>
{#             #}
                <div class="row uppercase text-white">
                    <button class="inline-block btn-cta hover:text-red-500 active:text-red-500 active:bg-red-500 mb-10" type="submit">Send message!</button>
                </div>

            </form>


